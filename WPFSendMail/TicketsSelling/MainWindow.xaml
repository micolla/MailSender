<Window x:Class="TicketsSelling.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicketsSelling"
        xmlns:vm="clr-namespace:TicketsSelling.ViewModel"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" Height="150" Width="400"
        MinHeight="150" MinWidth="400"
        MaxHeight="150" MaxWidth="400">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Margin="25" Grid.Column="0" Content="Продать билеты" 
                Command="{Binding SellTicketCommand}"/>
        <Button Margin="25" Grid.Column="1" Content="Завести новый сеанс" 
                Command="{Binding CreateNewSessionCommand}"/>
    </Grid>
</Window>
